pipeline {
    agent {
        docker {
            image 'kkarunalladeva/justops-test:v2'
            args '-v /usr/bin/docker:/usr/bin/docker -v /var/run/docker.sock:/var/run/docker.sock -p 3000:3000'
        }
    }
    stages {
        stage('Begin') {
            steps {
                echo "STARTED"
            }
        }
        stage('Checkout') {
            steps {
                checkout changelog: false, poll: false, scm: [$class: 'GitSCM', branches: [
                    [name: '*/master']
                ], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [
                    [url: 'https://github.com/deva95/chat-app.git']
                ]]
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm i mochawesome'
            }
        }
        stage('Continous Testing - Unit Test') {
            steps {
                sh 'npm test'
                // publish html
                publishHTML target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: false,
                    keepAll: true,
                    reportDir: 'mochawesome-report',
                    reportFiles: 'mochawesome.html',
                    reportName: 'Unit Testing Report'
                ]
            }
        }
        }
